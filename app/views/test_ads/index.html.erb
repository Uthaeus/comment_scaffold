<p id="notice"><%= notice %></p>

<h1>Test Ads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_ads.each do |test_ad| %>
      <tr>
        <td><%= test_ad.title %></td>
        <td><%= test_ad.body %></td>
        <td><%= test_ad.image %></td>
        <td><%= link_to 'Show', test_ad %></td>
        <td><%= link_to 'Edit', edit_test_ad_path(test_ad) %></td>
        <td><%= link_to 'Destroy', test_ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test Ad', new_test_ad_path %>
