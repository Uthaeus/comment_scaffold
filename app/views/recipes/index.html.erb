
<div class="container large-marg">
  <h1>Recipes</h1>

  <div class="row">
    <div class="col-md-7">
      <% @recipes.each do |recipe| %>
        <%= link_to recipe do %>
          <div class="card marg recipe_index" style="background-image: url(<%= recipe.main_image %>);">
            <div class="row">
              <div class="col-md-4 text-center">
                <%= recipe.title %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="marg">
    <%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
