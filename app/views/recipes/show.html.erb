<div>
  <div class="row">
    <div class="col-md-4">
      <h3><%= @recipe.title %></h3>
      <h5><%= @recipe.subtitle %></h5>
    </div>
    <div class="col-md-8">
      <p><%= @recipe.body %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <% @recipe.ingredients.each do |i| %>
        <div class="card">
          <h4><%= i.title %></h4>
          <h6><%= i.amount %></h6>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <% @recipe.instructions.each do |ins| %>
        <div class="card">
          <h4><%= ins.verb %></h4>
          <p><%= ins.body %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
